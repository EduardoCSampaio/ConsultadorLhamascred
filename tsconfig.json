{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["backend/src/*"]
    }
  },
  "include": ["api/**/*.ts", "backend/src/**/*.ts"],
  "exclude": ["node_modules", "frontend"]
}
